<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.ece.aurelien.androidproject.MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="104dp"
            android:background="@android:drawable/alert_light_frame">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="99dp"
                android:layout_height="match_parent"
                android:weightSum="1">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:id="@+id/textView2" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="58dp"
                    app:srcCompat="@drawable/plus"
                    android:id="@+id/addMatchLogo"
                    android:layout_weight="0.30"/>
            </LinearLayout>

            <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="88dp"
                android:id="@+id/matchAddInfo"
                android:layout_weight="0.60"
                android:gravity="center"
                android:textAlignment="textStart" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="109dp"
            android:background="@android:drawable/alert_light_frame">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/matchTwoPic"
                android:gravity="center"
                android:layout_weight="0.30" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="112dp"
                android:layout_height="match_parent"
                android:layout_weight="0.02">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/matchTwoTeamOne"
                    android:gravity="center"
                    android:layout_weight="0.30" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="29dp"
                    android:gravity="center"
                    android:id="@+id/matchTwoScoreA" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="103dp"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/matchTwoTeamTwo"
                    android:gravity="center"
                    android:layout_weight="0.30" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="29dp"
                    android:gravity="center"
                    android:id="@+id/matchTwoScoreB" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="102dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/matchThreePic"
                android:gravity="center"
                android:layout_weight="0.30" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/matchThreeTeamOne"
                android:gravity="center"
                android:layout_weight="0.30" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/matchThreeTeamTwo"
                android:gravity="center"
                android:layout_weight="0.30" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="102dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/matchFourPic"
                android:gravity="center"
                android:layout_weight="0.30" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/matchFourTeamOne"
                android:gravity="center"
                android:layout_weight="0.30" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/matchFourTeamTwo"
                android:gravity="center"
                android:layout_weight="0.30" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="102dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/matchFivePic"
                android:gravity="center"
                android:layout_weight="0.30" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/matchFiveTeamOne"
                android:gravity="center"
                android:layout_weight="0.30" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/matchFiveTeamTwo"
                android:gravity="center"
                android:layout_weight="0.30" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
