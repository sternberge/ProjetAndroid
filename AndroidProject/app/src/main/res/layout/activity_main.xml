<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.ece.aurelien.androidproject.MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:background="@android:drawable/alert_light_frame">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="66dp"
                android:layout_height="match_parent"
                android:weightSum="1">

                <TextView
                    android:layout_width="match_parent"
                    android:id="@+id/textView2"
                    android:layout_height="5dp" />

                <ImageView
                    android:layout_width="33dp"
                    android:layout_height="24dp"
                    app:srcCompat="@drawable/plus"
                    android:id="@+id/addMatchLogo"
                    android:scaleType="fitCenter" />
            </LinearLayout>

            <TextView
                android:text="TextView"
                android:layout_width="match_parent"
                android:layout_height="33dp"
                android:id="@+id/matchAddInfo"
                android:gravity="center"
                android:textAlignment="textStart" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:background="@android:drawable/alert_light_frame"
            android:layout_height="108dp"
            android:id="@+id/openteam1">

            <WebView
                android:layout_height="match_parent"
                android:id="@+id/imgloc"
                android:layout_weight="0.05"
                android:focusableInTouchMode="false"
                android:layout_width="98dp" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="112dp"
                android:layout_height="match_parent"
                android:layout_weight="0.02">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/matchTwoTeamOne"
                    android:gravity="center"
                    android:layout_weight="0.30" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="29dp"
                    android:gravity="center"
                    android:id="@+id/matchTwoScoreA" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="103dp"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/matchTwoTeamTwo"
                    android:gravity="center"
                    android:layout_weight="0.30" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="29dp"
                    android:gravity="center"
                    android:id="@+id/matchTwoScoreB" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:background="@android:drawable/alert_light_frame"
            android:layout_height="108dp"
            android:id="@+id/openteam2">

            <WebView
                android:layout_height="match_parent"
                android:id="@+id/imgloc2"
                android:layout_weight="0.05"
                android:focusableInTouchMode="false"
                android:layout_width="98dp" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="117dp"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/matchThreeTeamOne"
                    android:gravity="center"
                    android:layout_weight="0.30" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="29dp"
                    android:gravity="center"
                    android:id="@+id/matchThreeScoreA" />
            </LinearLayout>


            <LinearLayout
                android:orientation="vertical"
                android:layout_width="95dp"
                android:layout_height="match_parent"
                android:layout_weight="0.02">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/matchThreeTeamTwo"
                    android:gravity="center"
                    android:layout_weight="0.30" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="29dp"
                    android:gravity="center"
                    android:id="@+id/matchThreeScoreB" />
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:background="@android:drawable/alert_light_frame"
            android:layout_height="108dp"
            android:id="@+id/openteam3">

            <WebView
                android:layout_height="match_parent"
                android:id="@+id/imgloc3"
                android:layout_weight="0.05"
                android:focusableInTouchMode="false"
                android:layout_width="98dp" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="112dp"
                android:layout_height="match_parent"
                android:layout_weight="0.01">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/matchFourTeamOne"
                    android:gravity="center"
                    android:layout_weight="0.30" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="29dp"
                    android:gravity="center"
                    android:id="@+id/matchFourScoreA" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="106dp"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/matchFourTeamTwo"
                    android:gravity="center"
                    android:layout_weight="0.30" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="29dp"
                    android:gravity="center"
                    android:id="@+id/matchFourScoreB" />
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:background="@android:drawable/alert_light_frame"
            android:layout_height="110dp"
            android:id="@+id/openteam4">

            <WebView
                android:layout_height="match_parent"
                android:id="@+id/imgloc4"
                android:layout_weight="0.05"
                android:focusableInTouchMode="false"
                android:layout_width="98dp" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="112dp"
                android:layout_height="match_parent"
                android:layout_weight="0.01">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/matchFiveTeamOne"
                    android:gravity="center"
                    android:layout_weight="0.30" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="29dp"
                    android:gravity="center"
                    android:id="@+id/matchFiveScoreA" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_weight="0.01">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/matchFiveTeamTwo"
                    android:gravity="center"
                    android:layout_weight="0.30" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="29dp"
                    android:gravity="center"
                    android:id="@+id/matchFiveScoreB" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
